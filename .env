# PondMonitor Environment Configuration
# Development environment settings

# Flask Configuration
FLASK_SECRET_KEY=your-secure-secret-key-change-this-in-production-12345
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_TESTING=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5005

# Serial/LoRa Configuration (Development Mode)
SERIAL_PORT=/dev/ttyUSB0
BAUD_RATE=9600
TESTING_MODE=true
SIMULATE_DATA=true
RETRY_DELAY=5
MAX_RETRIES=3

# Database Configuration
POSTGRES_USER=pond_user
POSTGRES_PASSWORD=secretpassword
POSTGRES_DB=pond_data
PG_HOST=timescaledb
PG_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Weather API Configuration
WEATHER_LAT=49.6265900
WEATHER_LON=18.3016172
WEATHER_ALT=350
WEATHER_CACHE_DURATION=3600
USER_AGENT=PondMonitor/1.0 (pond@monitor.cz)
WEATHER_API_TIMEOUT=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=pondmonitor.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Alerting Configuration (disabled for development)
ALERTING_ENABLED=false
EMAIL_ALERTS_ENABLED=false
SMS_ALERTS_ENABLED=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Alert Thresholds
LOW_BATTERY_THRESHOLD=3.3
HIGH_TEMP_THRESHOLD=40.0
LOW_TEMP_THRESHOLD=-10.0
SIGNAL_THRESHOLD=-100

# Optional monitoring
GRAFANA_PASSWORD=admin